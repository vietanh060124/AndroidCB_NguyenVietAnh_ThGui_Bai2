<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp">

        <!-- Nhập Fahrenheit -->
        <TextView
            android:id="@+id/tvFahrenheit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fahrenheit" />

        <EditText
            android:id="@+id/etFahrenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập Fahrenheit"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Nhập Celsius -->
        <TextView
            android:id="@+id/tvCelsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celsius"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/etCelsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập Celsius"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Nút chuyển đổi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btnConvertToCelsius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert To Celsius"
                android:layout_marginRight="16dp"/>

            <Button
                android:id="@+id/btnConvertToFahrenheit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert To Fahrenheit" />
        </LinearLayout>

        <!-- Nút Clear -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_marginTop="16dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>